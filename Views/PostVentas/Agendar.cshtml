@model NebulaCars.Models.AgendarCitas
@{
    ViewData["Title"] = "AgendarCitas";
}
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agendar Cita - Concesionaria</title>
  <style>
    /* Estilos CSS para mejorar la apariencia del formulario */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }
    .container {
      max-width: 500px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h2 {
      text-align: center;
    }
    input[type="text"], input[type="email"], input[type="tel"], select, textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }
    input[type="submit"] {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    
    input[type="submit"]:hover {
      background-color: #45a049;
    }
  </style>
  font-size: 16px;
    }</head>
<body>


    @using (Html.BeginForm("EnviarMensaje", "AgendarCitas", FormMethod.Post, new { @class = "form-group" }))
{
      <div class="form-group">
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", type = "email" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Telefono)
        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Telefono)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ciudad)
        @Html.TextBoxFor(model => model.Ciudad, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Ciudad)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TipoDocumento)
        @Html.DropDownListFor(model => model.TipoDocumento, new SelectList(new[] { "DNI", "Carnet de ExtranjerÃ­a" }), new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.TipoDocumento)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NumeroDocumento)
        @Html.TextBoxFor(model => model.NumeroDocumento, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.NumeroDocumento)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Marca)
        @Html.DropDownListFor(model => model.Marca, new SelectList(new[] { "Toyota", "Honda", "Ford" }), new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Marca)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Modelo)
        @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Modelo)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Kilometraje)
        @Html.TextBoxFor(model => model.Kilometraje, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Kilometraje)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Placa)
        @Html.TextBoxFor(model => model.Placa, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Placa)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaCita)
        @Html.TextBoxFor(model => model.FechaCita, new { @class = "form-control", required = "required", type = "date" })
        @Html.ValidationMessageFor(model => model.FechaCita)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HoraCita)
        @Html.TextBoxFor(model => model.HoraCita, new { @class = "form-control", required = "required", type = "time" })
        @Html.ValidationMessageFor(model => model.HoraCita)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mensaje)
        @Html.TextAreaFor(model => model.Mensaje, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Mensaje)
    </div>

    <button type="submit" class="btn btn-primary">Agendar Cita</button>

}
</body>
</html>

