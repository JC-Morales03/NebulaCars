@model IEnumerable<NebulaCars.Controllers.ContactoController.ContactoRecomendation>

@{
    ViewData["Title"] = "Sentimientos de Contactos";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }

        h1 {
            font-size: 70px;
            font-family: 'Impact', Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            text-align: center;
            padding: 20px 0;
            color: #333;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 25px 0;
            box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .table th,
        .table td {
            padding: 15px;
            text-align: center;
            font-size: 18px;
        }

        .table th {
            background-color: #333;
            color: #fff;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:nth-child(odd) {
            background-color: #e6e6e6;
        }

        .table tr:hover {
            background-color: #ddd;
        }

        .table a {
            color: #333;
            text-decoration: none;
            font-size: 1.2rem;
            transition: color 0.3s;
        }

        .table a:hover {
            color: #007bff;
        }

        .table i {
            margin-right: 5px;
        }

        .btn-back {
            display: block;
            width: 200px;
            margin: 20px auto;
            padding: 15px;
            font-size: 20px;
            text-align: center;
            color: #fff;
            background-color: #5cb85c;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-back:hover {
            background-color: #4cae4c;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Sentimientos de Contactos</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Contacto.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Contacto.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Contacto.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Contacto.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Contacto.Message)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Sentimiento)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contacto.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contacto.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contacto.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contacto.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contacto.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sentimiento)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
