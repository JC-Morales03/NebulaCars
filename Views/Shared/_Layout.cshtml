<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NebulaCars</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NebulaCars.styles.css" asp-append-version="true" />
    <style>
        .nav-link-light {
            color: #ffffff;
        }
        .navbar-nav .nav-link {
            color: #ffffff !important;
            text-align: center;
            transition: color 0.3s, font-size 0.3s;
        }
        .navbar-nav .nav-link:hover {
            color: red !important;
            font-size: 1.2em;
        }
        .navbar-brand img {
            max-width: 100px;
            border-radius: 50%;
            overflow: hidden;
        }
        .navbar {
            background-color: #142239;
        }
        .footer {

            padding: 10px 0;
            font-size: 14px;
        }
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            display: flex;
            flex-direction: column;
        }
        main {
            flex: 1;

            
            padding: 10px 0; /* Padding superior e inferior reducido */
            font-size: 14px; /* Tamaño de fuente reducido */
      }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar" style="background-color: #142239;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="display: flex; align-items: center;">
                    <img src="/images/nebulalogo.jpg" alt="NebulaCars Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="AboutUs" asp-action="AboutUs">Sobre-Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Contacto" asp-action="Index">Contáctanos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="PostVentas" asp-action="Index">Post-Ventas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Nuestros-Vehiculos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Catalogo" asp-action="Index">Catálogo</a>
                        </li>                      
                                               
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TipoCambio" asp-action="Index">Tipo Cambio</a>
                        </li>
                        <li class="nav-item">
               <li class="nav-item">
    @if (User.IsInRole("Admin"))
    {
        <a class="nav-link text-dark bi bi-cart" asp-area="" asp-controller="Producto" asp-action="Index">Producto</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Todo" asp-action="Index">Todo</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="Index">Pedidos</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="contacto" asp-action="Sentimientos">Contactos</a>

    }
</li>



                            <!-- Aplicamos la clase nav-link-light a los enlaces -->
                            <partial name="MenuAdminPartial" />
                    </ul>
                            <partial name="_LoginPartial" class="nav-link-light" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center text-middle ml-5">
                    <div class="mt-3 mb-2 flex-grow-1" style="color: white;">
                        <p>&nbsp;</p>
                        <p class="text-dark h6" style="font-size: 18px; font-weight: bold;">Nebula Cars ©
                            @DateTime.Now.Year.ToString().PadLeft(4, '0'). Todos los derechos reservados. Potenciando
                            el futuro con tecnología de vanguardia y pasión por la innovación.</p>
                            <div class="mt-3 mb-2">
                        <h5 class="text-dark mb-1" style="font-weight: bold; font-size: 180%;">Contáctanos</h5>
                        <p class="text-dark" style="font-size: 110%; font-weight: bold;">Email: nebula@gmail.com<br />Teléfono: 5435323</p>
                    </div>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="mb-2"> <img src="~/images/logoNebula.jpg" alt="Descripción de la imagen"; style="background-color: #142239;"> </div>
                    <div class="d-flex justify-content-center"></div>
                </div>
                <div class="col-md-4 text-center"  >
                    <div class="col-md-2 mb-2" > <img src="~/images/redessociales.png" alt="Descripción de la imagen" style="width: 600px; height: auto; padding-top: 20px; padding-left: 80px;"> </div>
                    <div class="d-flex justify-content-center"></div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>








