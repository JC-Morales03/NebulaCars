<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NebulaCars</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NebulaCars.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar">
            <div class="container-fluid">
                <!-- Reemplaza el texto con la etiqueta img -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"
                    style="display: flex; align-items: center;">
                    <img src="/images/nebulalogo.jpg" alt="NebulaCars Logo" style="max-width: 100px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Contacto"
                                asp-action="Index">Contactanos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Catalogo"
                                asp-action="Index">Catalogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Carrito"
                                asp-action="Index">Carrito</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Catalogo" asp-action="Index">
                                <input type="text" name="searchString"><input type="submit" value="Buscar" />
                            </form>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* FOOTER *@
    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">

                <div class="col-md-4 text-center text-middle ml-5">
                    <div class="mt-5 mb-3 flex-grow-1">
                        <p class="text-dark h6" style="font-size: 16px;">Nebula Motors ©
                            @DateTime.Now.Year.ToString().PadLeft(4, '0'). Todos los derechos reservados.� Potenciando
                            el futuro con tecnología de vanguardia y pasión por la innovación.</p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="mb-3"> <img src="~/images/logoNebula.jpg" alt="Descripción de la imagen"
                            class="img-fluid mx-auto d-block"> </div>
                    <div class="d-flex justify-content-center">
                        <div class="col-md-2 mb-3"> <img src="~/images/facebook.jpg" alt="Descripción de la imagen"
                                class="img-fluid"> </div>
                        <div class="col-md-2 mb-3"> <img src="~/images/instagran.jpg" alt="Descripción de la imagen"
                                class="img-fluid"> </div>
                        <div class="col-md-2 mb-3"> <img src="~/images/whatsapp.jpg" alt="Descripción de la imagen"
                                class="img-fluid"> </div>
                    </div>
                </div>
                <div class="col-md-4 text-center mr-4">
                    <div class="mt-4 mb-3">
                        <h5 class="text-dark mb-2">Contáctanos</h5>
                        <p class="text-dark">Email: nebula@gmail.com<br />Teléfono: 5435323</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
