@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio de Sesion";
}
<style>
    body {
        
        background-image: url('/images/sport1.jpg');
        background-size: cover; /* Ajusta la imagen para que cubra todo el fondo */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
    }
    .custom-form {
        margin-top: 50px; /* Espacio superior */
        background-color: transparent; /* Fondo transparente */
        border-radius: 10px; /* Bordes redondeados */
        padding: 30px; /* Espaciado interior */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra ligera */
        max-width: 400px; /* Ancho máximo del formulario */
        margin-left: auto;
        margin-right: auto;
    }
    .custom-form h1 {
        color: white; /* Color de título azul */
    }
    .custom-form label {
        color: white; /* Color de etiquetas */
    }
    #login-submit {
        background-color: #142239; /* Color del botón */
        border-color: white; /* Color del borde del botón */
        color: white; /* Color del texto del botón */
        width: 100%; /* Ancho del botón */
    }
    #login-submit:hover {
        background-color: #0f1a2c; /* Color del botón al pasar el ratón */
        border-color: #0f1a2c; /* Color del borde del botón al pasar el ratón */
    }
    h2 {
        color: white; /* Color del subtítulo */
    }
    #forgot-password,
    #resend-confirmation {
        text-decoration: none;
        color: #142239;
    }
    #forgot-password:hover,
    #resend-confirmation:hover {
        text-decoration: underline;
    }
    .text-center {
        color: #142239; /* Color del texto centrado */
    }
    
</style>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-form">
                <h1 class="text-center">@ViewData["Title"]</h1>
                <form id="account" method="post">
                    <h2 class="text-center">&nbsp;</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" id="inputEmail" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" id="inputPassword" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary btn-block">Log in</button>
                    <div class="mt-3 text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿No tienes una cuenta? Regístrate aquí.</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
